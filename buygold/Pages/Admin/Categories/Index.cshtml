@page
@model buygold.Pages.Admin.Categories.IndexModel
<partial name="_notification" />

<div class="container p-3 align-items-center" dir="rtl">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary"><i class="fa-duotone fa-rectangle-vertical-history"></i>&nbsp;&nbsp;دسته بندی</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-page="create" class="btn btn-primary">
				<i class="fa-duotone fa-layer-plus"></i> &nbsp;ساخت دسته جدید
			</a>
		</div>
	</div>

	<br /><br />

	<table class="table table-bordered table-striped text-center" style="width:100%">
		<thead>
			<tr>
				<th>
					اسم&nbsp;&nbsp;&nbsp;<i class="fa-duotone fa-bowl-chopsticks"></i>
				</th>
				<th>
					دارنده&nbsp;&nbsp;&nbsp;<i class="fa-duotone fa-dollar-sign"></i>
				</th>
				<th><i class="fa-duotone fa-paint-roller"></i></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var obj in Model.Categories)
			{
				<tr>
					<td width="30%">@obj.Name <i class="fa-duotone fa-layer-group"></i></td>
					<td width="30%">@obj.Author <i class="fa-duotone fa-square-dollar"></i></td>
					<td>
						<div class="w-75 btn-group" role="group">
							<a asp-page="Edit" asp-route-id="@obj.Id" class="btn mx-2">
								<i class="fa-duotone fa-file-pen" style="color:blue"></i>
							</a>
							<a asp-page="Delete" asp-route-id="@obj.Id" class="btn mx-2">
								<i class="fa-duotone fa-trash" style="color:red"></i>
							</a>
						</div>
					</td>
				</tr>
			}

		</tbody>
	</table>

</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/iziToast/dist/js/iziToast.min.js"></script>